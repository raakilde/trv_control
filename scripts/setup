#!/usr/bin/env bash

set -e

cd "$(dirname "$0")/.."

# Install dependencies
python3 -m pip install --upgrade pip
pip3 install -r requirements_test.txt

# Create symlink to custom_components
mkdir -p .haconfig/custom_components
ln -sf "$(pwd)/custom_components/trv_control" .haconfig/custom_components/trv_control

echo "Setup complete!"
